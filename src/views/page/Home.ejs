<style>
    ul.pagination.justify-content-end.mb-0 {
        display: flex;
        position: absolute;
        bottom: 10px;
        right: 10px;
    }

    a.page-link {
        padding: 8px 12px;
        border: 1px solid gray;
        margin: 0 5px;
    }

    li.page-item.active {
        font-weight: bold;
    }

    li.page-item.active a {
        border: 1px solid black;
    }

    .tooltip {
        position: relative;
        display: inline-block;
    }

    .tooltip .tooltiptext {
        visibility: hidden;
        width: 100%;
        background-color: black;
        color: #fff;
        text-align: center;
        border-radius: 6px;
        padding: 5px 0;
        font-size: 14px;
        /* Position the tooltip */
        position: absolute;
        top: -35px;
        z-index: 1;
    }

    .tooltip:hover .tooltiptext {
        visibility: visible;
    }
</style>

<!-- Start: Banner -->

<div class="banner">
    <div class="container row">
        <!-- []Anh banner -->
        <img src="/page/img/banner.png" alt="">
        <!-- [v]Title -->
        <div class="col-2 title">
            <h2>Website cho thuê phòng trọ miễn phí
                cho người đi thuê hàng đầu ở Việt Nam
            </h2>
        </div>
    </div>
</div>

<!-- End: Banner -->
<div class="content">
    <!-- Start: Aside left content-->
    <div class="aside-left" style="position: relative;">
        <!-- Tiêu đề -->
        <div class="section-heading">
            <div id="title-right">
                <i class="fas fa-home"></i>
                Phòng mới nhất
            </div>
        </div>

        <% if (categories) { %>
            <% categories.forEach((item,index)=> { %>
                <div class="card-items">
                    <!-- Phòng mới -->
                    <div class="card-item" style="width: 100%;">
                        <div class="room-img" style="
                             width: 250px;
                            border-radius: 20px;
                            height: 200px;
                            margin-top: 10px;
                        ">
                            <a href="/phong/<%= item.id %>">
                                <img style="    
                                width: 100%;
                                object-fit: none;" src="<%= item.thumbnail %> " alt="">
                            </a>
                        </div>

                        <div class="room-desc">
                            <div class="room-desc-title">
                                <h3 class="tooltip">
                                    <span class="tooltiptext">
                                        <%= item.title %>
                                    </span>
                                    <a href="/phong/<%= item.id %>">
                                        <%= item.title.length> 45 ? item.title.substring(0,45) + " ..." : item.title %>
                                    </a>
                                </h3>
                            </div>
                            <div class="description">
                                <p><i class="fas fa-home"></i>
                                    <%= item.name %>
                                </p>
                                <p><i class="fas fa-user-friends"></i> Nam + Nữ</p>
                                <p><i class="fas fa-pencil-alt"></i>
                                    <%= item.acr %> m2
                                </p>
                                <p><i class="fas fa-map-marked-alt"></i>
                                    <span class="tooltip">
                                        <span class="tooltiptext">
                                            <%= item.address %>
                                        </span>
                                        <%= item.address.length> 45 ? item.title.substring(0,45) + " ..." : item.address
                                            %>
                                    </span>
                                </p>
                            </div>
                        </div>

                        <div class="room-price">
                            <div id="num" style="font-size: 16px;">
                                <%= item.price.toLocaleString('vi-VN', { style: 'currency' , currency: 'VND' }) %>
                            </div>
                        </div>
                    </div>
                    <div class="line"></div>
                </div>
                <% }) %>
                    <% } %>

                        <ul class="pagination justify-content-end mb-0">
                            <% for (i=1; i <=total; i ++) { %>
                                <% if(curentPage==i) { %>
                                    <li class="page-item active">
                                        <% if (q !='' || filter !='' ) { %>
                                            <a class="page-link"
                                                href="?page=<%= i %>">
                                                <%= i %>
                                            </a>
                                            <% } else { %>
                                                <a class="page-link" href="?page=<%= i %>">
                                                    <%= i %>
                                                </a>
                                                <% } %>

                                    </li>
                                    <%} else { %>
                                        <li class="page-item">

                                            <% if (q !='' || filter !='' ) { %>
                                                <a class="page-link"
                                                    href="?page=<%= i %>">
                                                    <%= i %>
                                                </a>
                                                <% } else { %>
                                                    <a class="page-link" href="?page=<%= i %>">
                                                        <%= i %>
                                                    </a>
                                                    <% } %>
                                        </li>
                                        <%} %>
                                            <% } %>
                        </ul>
    </div>

    <!-- End: Aside left content-->

    <!-- Start: Aside Right content-->
    <div class="aside-right">
        <div class="section-heading">
            <div id="title-right" style="font-size: 20px;">
                <i class="fas fa-check" style="color: green;"></i>
                Đã xác thực
            </div>
        </div>

        <div class="card-items">
            <!-- XT1 -->

            <% if (roomVerify) { %>
                <% roomVerify.forEach((item,index)=> { %>
                    <div class="card-item-right">
                        <div class="image-room" style="
                             width: 250px;
                            border-radius: 20px;
                            height: 200px;
                            margin-top: 10px;
                        ">
                            <a href="/phong/<%= item.id %>">
                                <img style="    
                                width: 100%;
                                object-fit: none;" src="<%= item.thumbnail %> " alt="">
                            </a>
                        </div>

                        <div class="card-item-right-desc">
                            <h3 class="tooltip">
                                <span class="tooltiptext">
                                    <%= item.title %>
                                </span>
                                <a href="/phong/<%= item.id %>">
                                    <%= item.title.length > 45 ? item.title.substring(0,45) + " ..." : item.title %>
                                </a>
                            </h3>
                            <h4>
                                <span class="tooltip">
                                    <span class="tooltiptext">
                                        <%= item.address %>
                                    </span>
                                    <%=  item.address
                                        %>
                                </span>
                                </h5>
                        </div>

                        <div class="card-item-right-price">
                            <div id="num">
                                <%= item.price.toLocaleString('vi-VN', { style: 'currency' , currency: 'VND' }) %>
                            </div>
                        </div>
                        <div class="line"></div>
                    </div>
                    <% }) %>
                        <% } %>
        </div>
    </div>
    <!-- End: Aside Right content-->
</div>