
        <!-- Start: Content -->
        <div class="content-register">
            <!-- Ưu đãi -->
            <div id="bar-offer">
                <div class="container">
                    <h1>Đăng kí thành viên Home X - Tích điểm thưởng và nhận ưu đãi</h1>
                    <p>Nhanh chóng, tiện lợi và an toàn. Đăng ký liền tay rinh ngay quyền lợi</p>
                </div>
            </div>
            <!-- Banner -->
            <div class="container">
                <!-- Logo -->
                <div class="big-white-logo">
                </div>
                <!-- Form -->
                <div class="registerForm">
                    <h1>Đăng kí thành viên</h1>
                    <form action="/dang-ki" method="POST">
                        
                        <label for="email">Loại tài khoản</label>
                        <div class="form-group" >
                            <div style="display: flex; align-items: center;">
                                <label style="font-size: 14px; width: 100px;" > Chủ phòng</label>
                                <input style="width: 14px;margin: 0;" type="radio" checked name="roleId" value="2">
                            </div>
                            <div style="display: flex; align-items: center;">
                                <label style="font-size: 14px; width: 100px;" >Khách thuê</label>
                                <input style="width: 14px;margin: 0;" type="radio" name="roleId" value="3">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="email">Tài khoản</label>
                            <input type="text" id="email" name="username" placeholder="Nhập tài khoản ...">
                        </div>
                        <div class="form-group">
                            <label for="password">Mật khẩu (Tối thiểu 8 kí tự)</label>
                            <input type="password" id="password" name="password" placeholder="Nhập mật khẩu ..">
                        </div>
                        <div class="form-group">
                            <label for="c-password">Xác nhận mật khẩu</label>
                            <input type="password" id="c-password" name="c-password" placeholder="Xác nhận mật khẩu ..">
                        </div>
                        <div class="form-group">
                            <label for="email">Địa chỉ email</label>
                            <input type="email" id="email" name="email" placeholder="Nhập email ...">
                        </div>
                        <div class="form-group">
                            <label for="phone">Số điện thoại</label>
                            <input type="text" id="phone" name="phone" placeholder="Nhập số điện thoại ..">
                        </div>
                        <div class="form-group">
                            <label for="fullname">Họ tên</label>
                            <input type="text" id="fullname" name="fullname" placeholder="Nhập họ và tên đệm ..">
                        </div>
                     
                        <button type="submit" class="btn-register">Đăng kí</button>
                    </form>

                    <div class="outside-form">
                        <h3>Bạn đã có tài khoản Home X ? <span><a href="/dang-nhap">Đăng nhập</a> </span></h3>
        
                        <a class="loginSocial" href="">
                            <button>
                                Đăng nhập với Facebook
                            </button>
                            <i class="fab fa-facebook" style="color: blue;"></i>                
                        </a>

                        <a class="loginSocial" href="">
                            <button>
                                Đăng nhập với Google 
                            </button>
                            <i class="fab fa-google-plus" style="color: red;"></i>
                        </a>
                    </div>
                </div>
            </div>
            
        </div>
        <script>
            
            // notifycation
                toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": true,
                "progressBar": false,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "11300",
                "hideDuration": "111000",
                "timeOut": "15000",
                "extendedTimeOut": "11000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
                }

                <% if (errorValidate) { %>
                const err = '<%= errorValidate %>';
                toastr["error"]("<%= errorValidate %>")

                <%}%>
                  <% if (successAlert) { %> 
                  toastr["success"]("Đăng ký tài khoản thành công")
                <%}%>
        </script>

